   leaf dr-ip-addr {
     type inet:ip-address;
     config false;
     description "Designated Router (DR) IP address.";
   }

   leaf bdr-router-id {
     type rt-types:router-id;
     config false;
     description "Backup Designated Router (BDR) Router ID.";
   }

   leaf bdr-ip-addr {
