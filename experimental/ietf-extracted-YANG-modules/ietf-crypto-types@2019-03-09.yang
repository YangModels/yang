    reference
      "RFC 4868:
         Using HMAC-SHA-256, HMAC-SHA-384, and HMAC-SHA-512 with
         IPsec";
  }

  identity aes-128-gmac {
    base "mac-algorithm";
    description
      "Generating MAC using the Advanced Encryption Standard (AES)
