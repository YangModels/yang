  }

  import arcos-srv6 {
    prefix arc-srv6;
  }

  import arcos-srv6-types {
    prefix arc-srv6-types;
  }

  import arcos-igp-types {
    prefix arc-igp-types;
  }

  import arcos-te {
    prefix arc-te;
  }

  import openconfig-bfd {
    prefix oc-bfd;
  }

  import openconfig-network-instance {
