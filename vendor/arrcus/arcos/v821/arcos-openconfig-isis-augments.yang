          "/oc-ni:subTLVs/oc-ni:subTLVs" +
          "/oc-ni:unreserved-bandwidth/oc-ni:setup-priority/oc-ni:state" {
    uses isis-unreserved-bandwidth-state;
  }

  grouping isis-bandwidth-constraints-state {
    description
      "This grouping defines augments to bandwidth-constraints
       Sub-TLV state";

    leaf bandwidth-constraints-value {
      type uint64;
      units "bytes per second";
      description
        "Contains BC0, BC1,... BC(N-1).  Each BC is encoded on 32 bits
        in IEEE floating point format.  The units are bytes (not bits!)
        per secondy.";
    }
  }

  grouping isis-residual-bandwidth-state {
    description
      "This grouping defines augments to residual-bandwidth
       Sub-TLV state";

    leaf residual-bandwidth-value {
      type uint64;
      units "bytes per second";
      description
        "Residual bandwidth on a link,forwarding adjacency [RFC4206], or
        bundled link in IEEE floating-point format with units of bytes
        per second. For a link or forwarding adjacency, residual
        bandwidth is defined to be the Maximum Bandwidth [RFC5305] minus
        the bandwidth currently allocated to RSVP-TE label switched
        paths. For a bundled link, residual bandwidth is defined to be
        the sum of the component link residual bandwidths.";
    }
  }

  grouping isis-available-bandwidth-state {
    description
      "This grouping defines augments to available-bandwidth
       Sub-TLV state";

    leaf available-bandwidth-value {
      type uint64;
      units "bytes per second";
      description
        "The available bandwidth on a link, forwarding adjacency, or
        bundled link in IEEE floating-point format with units of bytes
        per second. For a link or forwarding adjacency, available
        bandwidth is defined to be residual bandwidth minus the measured
        bandwidth used for the actual forwarding of non-RSVP-TE label
        switched path packets.  For a bundled link, available bandwidth
        is defined to be the sum of the component link available
        bandwidths minus the measured bandwidth used for the actual
        forwarding of non-RSVP-TE label switched path packets.  For a
        bundled link, available bandwidth is defined to be the sum of
        the component link available bandwidths.";
    }
  }

  grouping isis-utilized-bandwidth-state {
    description
      "This grouping defines augments to utilized-bandwidth
       Sub-TLV state";

    leaf utilized-bandwidth-value {
      type uint64;
      units "bytes per second";
      description
        "The bandwidth utilization on a link, forwarding adjacency, or
        bundled link in IEEE floating-point format with units of bytes
        per second.  For a link or forwarding adjacency, bandwidth
        utilization represents the actual utilization of the link (i.e.,
        as measured by the advertising node).  For a bundled link,
        bandwidth utilization is defined to be the sum of the component
        link bandwidth utilizations.";
    }
  }

  grouping isis-global-area-system-id {
    leaf-list area-address {
      type string;
      description
        "This type defines IS-IS Area address. An area address should be in
        the form xx.yyyy.";
     }

    leaf system-id {
      type string;
      description
        "This type defines IS-IS System ID. A System ID should  be in
        the form yyyy.yyyy.yyyy.00 ";
     }
  }

