  grouping adjacency-state-top {
    leaf neighbor-lan-id {
      type arc-isis-types:node-name;
      description
        "ISIS neighbor LAN ID.";
    }
    leaf usable {
      type boolean;
       description
        "ISIS neighbor usable";
    }
    leaf restarting-neighbor-id {
      type arc-isis-types:system-name;
      description
        "ISIS Restarting Neighbor System ID.
         When an ISIS router that supports graceful restart receives
         the restart TLV in the IIH of a neighbor with the RR flag set
         and the receiving router had an adjacency to this restarting
         neighbor at the same level in UP state before, then the
         receiving router sends IIH to that neighbor containing the
         restart TLV with RA set and places the system-ID of that
         neighbor in the 'Restarting Neighbor ID' field";

    }
    leaf restart-ack {
      type boolean;
      description
        "If TRUE, then we received a restart TLV with the RA
         flag set";
    }
    leaf restart-request {
      type boolean;
      description
        "If TRUE, then we received a restart TLV with the RR
         flag set";
    }
    leaf restart-remaining-time {
      type uint16;
      description
        "The 'remaining time' field value of the restart TLV.";
    }
    leaf adjacency-up-time {
      type string;
      description
        "The time since the adjacency has been established.";
    }

    leaf-list received-multi-topology-ids {
      type isis-multi-topology-id;
      description
        "List of Topology IDs advertised by neighbor.";
    }

    leaf-list active-multi-topology-ids {
      type isis-multi-topology-id;
      description
        "List of Topology IDs active on this adjacency i.e. common
         to both local system and the neighbor.";
    }
    leaf num-state-changes {
      type yang:counter32;
      description "Number of times the adjacency state changed";
    }

    leaf last-state-change-timestamp {
      type yang:date-and-time;
      description "Timestamp of the last state change";
    }

    leaf last-down-reason {
      type enumeration {
        enum NONE {
          value 0;
          description "No specific reason for state change";
        }
        enum AREA_MISMATCH {
          value 1;
          description "Area address mismatch with neighbor";
        }
        enum WRONG_SYS_TYPE {
          value 2;
          description "System type does not match with neighbor";
        }
        enum SYS_ID_CHANGE {
          value 3;
          description "Neighbor system ID changed";
        }
        enum HOLD_TIME_EXPIRED {
          value 4;
          description "Hold timer expired before receiving hello";
        }
        enum NBR_RESTART {
          value 5;
          description "Neighbor is restarting";
        }
        enum BFD_DOWN {
          value 6;
          description "BFD session went down";
        }
        enum NOT_USABLE {
          value 7;
          description "Interface is not usable for IS-IS";
        }
        enum ITF_DOWN {
          value 8;
          description "Interface went down";
        }
        enum RESTART_RR_STATE_NOT_UP {
          value 9;
          description "Received restart TLV with RR set but adjacency state is not UP";
        }
        enum P2P_NBR_NO_GR {
          value 10;
          description "P2P neighbor does not support graceful restart";
        }
        enum CLEAR_INITIATED {
          value 11;
          description "Clear command was initiated by user";
        }
      }
      description "Reason for the last adjacency down (i.e., transition to the DOWN state).";
    }
  }

