  grouping dpal-publish-stats {
    description
      "counters specific to publish stats from FIB.";

    container nexthop {
        description "single nexthop";
        uses publish-stats;
    }
    container nexthop-group {
        description "ecmp nexthop";
        uses publish-stats;
    }
    container protected-nexthop {
