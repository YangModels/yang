  grouping publish-stats {
    container publish-stats {
      leaf total-published {
        type yang:counter64;
        description "Current number of objects in use (published to DPAL)";
      }
      leaf high-water-mark {
        type yang:counter64;
        description "High-water mark of objects in use (peak concurrent published)";
      }
