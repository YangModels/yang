      "TR-355: YANG Modules for FTTdp Management
               <https://www.broadband-forum.org/technical/download/
                        TR-355.pdf>";
  }

  typedef pmd-profile-ref {
    type leafref {
      path '/bbf-melt:melt/bbf-melt:profiles/bbf-melt:pmd-profile/'
         + 'bbf-melt:name';
    }
    description
      "Used to reference a PMD profile";
  }


  augment '/bbf-melt:melt/bbf-melt:profiles' {
    description
      "Data nodes for PMD configuration profiles.";

    list pmd-profile {
      key "name";
      description
        "A list of PMD profiles.";

      leaf name {
        type bbf-yang:string-ascii64;
        description
          "A name that uniquely identifies the profile.";
      }

      uses pmd-profile;
    }
  }
}
